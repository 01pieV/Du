#objedkty ktore nakreslim na canvas budu mat pridelene vlastne ID a dokazem ich menit
import tkinter as tk

def change_color():
    if canvas.itemcget(object1, 'fill') == 'blue':
        canvas.itemconfig(object1, fill='red')
    elif canvas.itemcget(object1, 'fill') == 'red':
        canvas.itemconfig(object1, fill='blue')


window = tk.Tk()
window.title("Moje okno")

canvas = tk.Canvas(window, width=800, height=600, bg='white')
canvas.pack()

button1 = tk.Button(window, text="Click me", command=change_color)
button1.pack()



object1 = canvas.create_rectangle(100, 100, 200, 200, fill='blue', outline='blue')
print(object1)
print(canvas.itemcget(object1, "outline")) # zistim niaku vlastnost


window.mainloop()





import random
import tkinter as tk

win = tk.Tk()
canvas = tk.Canvas(win, width=1000, height=1000, background='white')
canvas.pack()


def click_funk(event):
    print(f'klikol som na suradnice: {event.x},{event.y}')
    objekty = canvas.find_overlapping(event.x, event.y, event.x+1, event.y+1)
    print(f'objekt: {objekty}')
    if len(objekty) > 0:
        for i in objekty:
            canvas.itemconfig(i, fill='green')
            canvas.move(i,random.randrange(-10,10),random.randrange(-10,10))

#Button-1
#ButtomRelease-1
#B1-Motion
# ked kliknem na tom objedkte ktory chcem posununt, tak do niakych glob surandic si ulozim x a y poziciu mysky
moving = 1
sur_x = None
sur_y = None
def drag_and_drop(event):
    global sur_x, sur_y
    objekty = canvas.find_overlapping(event.x, event.y, event.x + 1, event.y + 1)
    if moving in objekty:
        sur_x = event.x
        sur_y = event.y

def moving_funk(event):
    #print("Ficim")
    global sur_x, sur_y
    if sur_x is not None:
        v_x = event.x - sur_x
        v_y = event.y - sur_y
        canvas.move(moving, v_x, v_y)
        sur_x = event.x
        sur_y = event.y

def stop_funk(event):
    global sur_x, sur_y
    sur_x = None
    sur_y = None



object1 = canvas.create_oval(100, 100, 250, 250, fill='blue', tags='mys_ob')
object2 = canvas.create_rectangle(100, 150, 200, 250, fill='red', tags='mys_ob')

#canvas.bind("<Button-1>", click_funk)
canvas.bind("<Button-1>", drag_and_drop)
canvas.bind("<B1-Motion>", moving_funk)
canvas.bind("<ButtonRelease-1>", stop_funk)



#pyrotechnik je na maturite



win.mainloop()
