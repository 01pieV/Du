def miesaj(co, typ_mies= True):
  size = len(co)
  if typ_mies: #nemusim davat true ak sa rovna false vykona else
    for i in range(size**2):
      p = random.randrange(0,size)
      d = random.randrange(0,size)
      # co[p], co[d] = co[d], co[p] # iba v pythone
      pom = co[d]
      co[d] = co[p]
      co[p] = pom
  else:
    parne = [i for i in range(2,size,2)]
    random.shuffle(parne)
    neparne = [i for i in range(1,size,2)]
    random.shuffle(neparne)

    for i in range(0,size//2-1):
      co[i*2] = parne[i]
      co[i*2+1] = neparne[i]

